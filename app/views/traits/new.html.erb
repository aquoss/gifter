<%= form_for @trait, url: create_gift_trait_path(@gift) do |f| %>
  <div class="row card">
    <div class="card-content">
      <div class="col s12">
        <h5>Describe the gift</h5>
      </div>
      <div class="field col s12">
        <div class="col s3">
          <%= f.check_box :reading, id: "reading" %>
          <%= f.label :reading, for:"reading" %><br>
          <%= f.check_box :film, id: "film" %>
          <%= f.label :film, for:"film" %><br>
          <%= f.check_box :cooking, id: "cooking" %>
          <%= f.label :cooking, for:"cooking" %>
        </div>
        <div class="col s3">
          <%= f.check_box :art, id: "art" %>
          <%= f.label :art, for:"art" %><br>
          <%= f.check_box :electronics, id: "electronics" %>
          <%= f.label :electronics, for:"electronics" %><br>
          <%= f.check_box :sports, id: "sports" %>
          <%= f.label :sports, for:"sports" %>
        </div>
        <div class="col s3">
          <%= f.check_box :fashion, id: "fashion" %>
          <%= f.label :fashion, for:"fashion" %><br>
          <%= f.check_box :gaming, id: "gaming" %>
          <%= f.label :gaming, for:"gaming" %><br>
          <%= f.check_box :music, id: "music" %>
          <%= f.label :music, for:"music" %>
        </div>
        <div class="col s3">
          <%= f.check_box :travel, id: "travel" %>
          <%= f.label :travel, for:"travel" %><br>
          <%= f.check_box :outdoor_activities, id: "outdoor_activities" %>
          <%= f.label :outdoor_activities, for:"outdoor_activities" %>
        </div>
        <div class="field col s12">
          <%= f.check_box :cheapest_price, id: "cheap" %>
          <%= f.label "$ 0 - 25", for:"cheap" %> &emsp;
          <%= f.check_box :low_price, id: "low" %>
          <%= f.label "$ 25 - 50", for:"low" %> &emsp;
          <%= f.check_box :med_price, id: "med" %>
          <%= f.label "$ 50 - 75", for:"med" %> &emsp;
          <%= f.check_box :high_price, id: "high" %>
          <%= f.label "$ 75 - 100", for:"high" %> &emsp;
        </div>
        <div class="col s12">
          <br><h5>Age Range</h5>
          <%= f.radio_button :age, "infant" %>
          <%= f.label :age_infant, "Infant" %> &emsp;
          <%= f.radio_button :age, "child" %>
          <%= f.label :age_child, "Child" %> &emsp;
          <%= f.radio_button :age, "teenager" %>
          <%= f.label :age_teenager, "Teenager" %> &emsp;
          <%= f.radio_button :age, "young_adult" %>
          <%= f.label :age_young_adult, "Young Adult" %> &emsp;
          <%= f.radio_button :age, "adult" %>
          <%= f.label :age_adult, "Adult" %> &emsp;
          <%= f.radio_button :age, "senior" %>
          <%= f.label :age_senior, "Senior" %>
        </div>
        <%= f.hidden_field :traitable_id, value: @gift.id %>
        <%= f.hidden_field :traitable_type, value: "Gift" %>
      </div>
      <div class="actions">
        <%= f.submit "Save", class: "btn" %>
      </div>
    </div>
  </div>
<% end %>
