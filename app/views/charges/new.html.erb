<h4>Chosen gift for <%= @recipient.first_name %></h4>
<div class="row">
  <div class="col s12 m5">
    <div class="card">
      <div class="card-image">
        <img src="http://www.shzongyue.com/data/out/97/39543346-present.jpg">
      </div>
      <div class="card-content">
        <strong><%= @gift.item %></strong><br>
        <%= @gift.price %>
      </div>
    </div>
  </div>
  <div class="col s12 m7">
    <div class="card">
      <div class="card-content">
        <h5>Summary</h5>
          <div class="row">
            <div class="col s7">Item total</div>
            <div class="col s5"><%= number_to_currency(@gift.price) %></div>
            <div class="col s12">
              Choose Shipping address
              * Expected delivery time: 5-7 business days
              * note about only having to enter stripe payment once
            </div>
            <div class="col s7">Shipping</div>
            <div class="col s5"><%= number_to_currency(3.99) %></div>
          </div>
      </div>
    </div>
  </div>
</div>

<%= form_tag new_charge_path(@recipient, @event, @gift) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span><%= number_to_currency(@amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Happy gifting!"
          data-amount="<%= @amount * 100 %>"
          data-locale="auto"></script>
<% end %>
