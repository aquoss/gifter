<h4>Choose a gift for <%= @recipient.first_name %></h4>
<div class="row">
  <% @gift_recs.each do |gift| %>
    <div class="col m6 l4">
      <div class="card hoverable">
        <div class="card-image">
          <img src= <%= "#{gift.image}" %> >
        </div>
        <div class="card-content">
          <strong><%= gift.item %></strong><br>
          <%= number_to_currency gift.price %>
        </div>
        <div class="card-action">
          <%= link_to "Select me!", new_order_path(@recipient, @event, gift) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
