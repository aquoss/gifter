<%= form_for @recipient do |f| %>

  <div class="row card">
    <div class="card-content">
      <div class="col s12">
        <h5>Shipping Address</h5>
        <div class="field col m6 s12">
          <%= f.label "Street Address" %>
          <%= f.text_field :address_line_1 %>
        </div>
        <div class="field col m6 s12">
          <%= f.label "Apt/Ste, PO Box (optional)" %>
          <%= f.text_field :address_line_2 %>
        </div>
        <div class="field col m6 s12">
          <%= f.label "City" %>
          <%= f.text_field :city %>
        </div>
        <div class="field col m6 s12">
          <%= f.label "State" %>
          <%= f.text_field :state %>
        </div>
        <div class="field col m6 s12">
          <%= f.label "Country" %>
          <%= f.text_field :country %>
        </div>
        <div class="field col m6 s12">
          <%= f.label "Zip Code" %>
          <%= f.text_field :zip_code %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-small" %>
      </div>
    </div>
  </div>
<% end %>
