<div class="card col s12 z-depth-0">
  <table class="card-content">
    <thead>
      <tr>
        <td class="card-title">Upcoming Events</td>
      </tr>
    </thead>
    <tbody>
      <% sortUpcomingEvents(@recipient.events).each do |event| %>
        <tr>
          <td>
            <%= event.occasion %>
          </td>
          <td>
            <%= event.calendar_date.strftime("%B %d, %Y") %>
          </td>
          <td>
            <% if !event.orders.exists? %>
              <%= link_to delete_recipient_event_path(@recipient, event), method: :delete do %>
                <i class="material-icons">delete_forever</i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
